rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to puzzles collection
    match /puzzles/{puzzleId} {
      allow read: if true;  // Anyone can read puzzles
      allow write: if false; // No one can write (we'll manage puzzles through admin)
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}